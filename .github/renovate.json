{
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":rebaseStalePrs",
    "docker:enableMajor",
    "group:allNonMajor"
  ],
  "labels": ["kind/dependency upgrade"],
  "constraints": {
    "go": "1.20"
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["kind/security"]
  },
  "osvVulnerabilityAlerts": true
}
