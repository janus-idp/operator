{
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":rebaseStalePrs",
    "docker:enableMajor",
    "group:allNonMajor"
  ],
  "labels": ["kind/dependency upgrade"],
  "baseBranches": ["main", "/^1\\..*\\.x/"],
  "constraints": {
    "go": "1.20"
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor","patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "pinDigests": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["kind/security"]
  },
  "osvVulnerabilityAlerts": true
}
