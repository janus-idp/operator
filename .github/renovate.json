{
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":rebaseStalePrs",
    "group:allNonMajor",
    "docker:disableMajor"
  ],
  "labels": [
    "kind/dependency upgrade"
  ],
  "baseBranches": [
    "main",
    "/^1\\..*\\.x/"
  ],
  "constraints": {
    "go": "1.20"
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "digest": {
        "enabled": false
      },
      "automerge": true,
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "digest": {
        "enabled": false
      },
      "automerge": true,
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "minor,",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "pinDigests": true
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "rangeStrategy": "bump",
      "enabled": false,
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": [
      "kind/security"
    ]
  },
  "osvVulnerabilityAlerts": true
}
